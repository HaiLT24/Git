@model Tag
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>CREATE</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="col-md-2">Name : <label style="color:red"> *</label></label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <br />
        <label class="col-md-2">Description : </label>
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Description, new { @cols = "92", @rows = "5" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
        <br />
        <label class="col-md-2">Url : <label style="color:red"> *</label></label>
        <div class="col-md-5">
            @Html.EditorFor(model => model.UrlSlug, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UrlSlug, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-5" style="visibility: hidden">
            @Html.EditorFor(model => model.Posts, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Posts, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-warning" href="@Url.Action("Index", "TagAdmin")">Back</a>
            </div>
        </div>
    </div>
}
